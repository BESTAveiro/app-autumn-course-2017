<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.ua.bestaveiro.autumncourse2017.Drinking_G2K.Drinking">
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Drinking Games"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="75dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/DrinkingGameTitleFont"
        />

    <ListView
        android:id="@+id/list_view_drinking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DrinkingGameTitleFont">
    </ListView>
</RelativeLayout>
