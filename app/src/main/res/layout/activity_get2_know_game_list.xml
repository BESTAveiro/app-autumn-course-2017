<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bestaveiro.autumncourse2017.Drinking_G2K.Get2KnowGameList">
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Drinking Games"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="75dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/Get2KnowGameTitleFont"
        />

    <ListView
        android:id="@+id/list_view_drinking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Get2KnowGameTitleFont">
    </ListView>

</RelativeLayout>
